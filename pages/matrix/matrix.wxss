.head{  display: flex;
        float: row;
        justify-content: center;
}
.row{
  justify-content: center;
  width: 300rpx;
  position: relative;
  display: flex;
}
.tabbar{
    display: flex;
    flex-direction: column;
    justify-content: center;  
}
.content{
  background-color:#f8f8f9  ;
}
.result{
  display: flex;
  flex-direction: column;
  justify-content: center;  
  align-items: center;
  background-color: #f8f8f9  ;
  width: auto;
}
.input{
  width: 150px;
  height: 30px;
